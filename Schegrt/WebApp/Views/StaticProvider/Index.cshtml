    </tr>

    @foreach (GeneralUser item in ViewBag.Recommendations)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @String.Join(",", item.Interests.Select(x => x.Foi.Name))
            </td>
        </tr>
    }

</table>
